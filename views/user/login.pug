extends ../layout/default.pug
block content
	.container
		.jumbotron.my-2
			h1= title
			hr
			p 회원 가입 하시려면 아래의 버튼을 클릭하세요.
			button.btn.btn-primary(onclick="location.href='/user/join';") 회원 가입
		form(name="loginForm" method="post" onSubmit="return onLogin(this);" action="/user/logon")
			table.table.my-5.tb-join.border-bottom
				tbody
					tr
						td.title 아이디
						td.content
							input.form-control(type="text" name="userid" placeholder="아이디")
							.valid
					tr
						td.title 비밀번호
						td.content
							input.form-control(type="password" name="userpw" placeholder="비밀번호")
			.text-center
				button.btn.btn-info 로그인